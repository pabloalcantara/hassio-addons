{
  "name": "Rsync Backups",
  "version": "1.1.1",
  "slug": "rsync_backups",
  "description": "Transfers the Hass.io backups to a remote rsync server.",
  "url": "https://github.com/pabloalcantara/hassio-addons",
  "startup": "once",
  "boot": "manual",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "map": ["backup:rw"],
  "options": {
    "server": "rsync-server",
    "port": 22,
    "directory": "~/hassio-backups",
    "username": "user",
    "password": "password",
    "auto_purge": 0
  },
  "schema": {
    "server": "str",
    "port": "int",
    "directory": "str",
    "username": "str",
    "password": "str",
    "auto_purge": "int"
  }
}
